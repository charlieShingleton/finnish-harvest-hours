{
  "name": "finnish-harvest-hours",
  "version": "0.0.1",
  "engines": {
    "node": "8"
  },
  "description": "Compare your total logged hours in Harvest with standard Finnish working hours",
  "main": "index.js",
  "scripts": {
    "format": "prettier \"server-2.0/**/*.{js,html}\" --write",
    "lint": "eslint \"server-2.0/**/*.js\" --quiet",
    "start": "npm run bundle:css && node server/server.js",
    "start:server-2.0": "nodemon --inspect server-2.0/server.js",
    "debug": "node --nolazy --inspect-brk=9229 server-2.0/server.js",
    "start:watch": "yarn watch:server & yarn watch:less",
    "watch:server": "nodemon --watch 'server/**/*.js' server/server.js",
    "watch:less": "chokidar --initial 'styles' -c 'yarn bundle:css'",
    "bundle:css": "lessc styles/main.less server/static/styles/main.css",
    "test": "elm-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joaalto/finnish-harvest-hours.git"
  },
  "author": "Joonas Aalto",
  "license": "MIT",
  "homepage": "https://github.com/joaalto/finnish-harvest-hours",
  "dependencies": {
    "body-parser": "^1.14.2",
    "connect-mongo": "^1.1.0",
    "express": "^4.13.4",
    "express-session": "^1.15.0",
    "finnish-holidays-js": "^1.1.0",
    "less": "^2.7.2",
    "lodash": "^4.4.0",
    "mongoose": "^4.6.2",
    "passport": "^0.3.2",
    "passport-oauth2": "^1.1.2",
    "promise": "^7.1.1",
    "superagent": "^1.7.2",
    "superagent-promise": "^1.1.0"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "dotenv": "^8.2.0",
    "elm-test": "^0.18.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^1.11.0",
    "prettier": "^1.19.1"
  }
}
